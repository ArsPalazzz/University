<Window
    x:Class="Lab45.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Lab45"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="TradeCenter"
    Width="800"
    Height="450"
    FontFamily="Inter"
    Icon="./Assets/tradecenter-logo2.png"
    Loaded="Window_Loaded"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Background>
        <ImageBrush ImageSource="./Assets/space-bg5.jpg" />
    </Window.Background>

    <Window.Resources>
        <ControlTemplate x:Key="ButtonTemplate" TargetType="Button">
            <Border
                BorderBrush="Transparent"
                BorderThickness="1"
                CornerRadius="15"
                TextBlock.Foreground="White">
                <Border.Background>
                    <SolidColorBrush Color="#AF3246EA" />
                </Border.Background>
                <ContentPresenter
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    RecognizesAccessKey="True" />
            </Border>
        </ControlTemplate>
    </Window.Resources>
    <Window.CommandBindings>
        <CommandBinding Command="local:WindowCommands.EngSelect" Executed="EngLocal_Selected" />
        <CommandBinding Command="local:WindowCommands.RusSelect" Executed="RusLocal_Selected" />
    </Window.CommandBindings>
    <Border BorderThickness="4" CornerRadius="130">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.4*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="0.4*" />
                <ColumnDefinition Width="0.4*" />
                <ColumnDefinition Width="0.1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>


            <Grid Grid.Row="0" Grid.Column="0">

                <Image
                    Height="46"
                    MaxWidth="130"
                    Margin="1,10,-0.2,17.6"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Source="./Assets/tradecenter-logo2.png" />
            </Grid>

            <Grid Grid.Row="0" Grid.Column="1">

                <TextBox
                    x:Name="SearchBox"
                    MaxHeight="40"
                    Margin="15,0,10,10"
                    Background="Transparent"
                    BorderThickness="0,0,0,3"
                    FontSize="24"
                    Foreground="White"
                    TextChanged="SearchBox_TextChanged" />

            </Grid>

            <Grid
                Grid.Row="0"
                Grid.Column="2"
                VerticalAlignment="Center">

                <Button
                    x:Name="AddItemTxtBlck"
                    MaxHeight="40"
                    Margin="0,0,0,0"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="AddItem_func"
                    Content="{DynamicResource h_Tab4}"
                    FontSize="16"
                    Foreground="White" />

            </Grid>
            <Grid
                Grid.Row="0"
                Grid.Column="3"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

                <StackPanel Orientation="Horizontal">
                    <!--<TextBlock
                        FontSize="16"
                        Foreground="White"
                        Text="Фильтр" />-->
                    <Button
                        Padding="10,5"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="FilterWin_Open"
                        Content="{DynamicResource h_Tab5}"
                        FontSize="16"
                        Foreground="White" />
                    <!--<ComboBox>
                        <ComboBoxItem Content="Стоимость" />
                        <ComboBoxItem Content="Тип кузова" />
                        <ComboBoxItem Content="Рейтинг" />
                    </ComboBox>
                    <TextBlock Text="" />-->
                </StackPanel>
            </Grid>


            <TabControl
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="5"
                Style="{DynamicResource TabControlStyle}">
                <TabItem
                    Grid.Row="0"
                    Grid.Column="0"
                    Width="70"
                    Height="25"
                    Header="{DynamicResource h_Tab1}">
                    <TabItem.Content>
                        <ListBox
                            Name="Autos"
                            Grid.Row="1"
                            Grid.ColumnSpan="5"
                            Style="{DynamicResource CyanBgStyle}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="0.3*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>


                                        <Grid Grid.Row="0" Grid.Column="0">
                                            <Image
                                                x:Name="ProductsPhoto"
                                                Width="220"
                                                Height="140"
                                                Margin="10,10"
                                                Source="{Binding imgPath}" />
                                        </Grid>

                                        <Grid Grid.Row="0" Grid.Column="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="0.75*" />
                                                <RowDefinition Height="0.3*" />
                                                <RowDefinition Height="0.3*" />
                                                <RowDefinition Height="0.3*" />
                                            </Grid.RowDefinitions>
                                            <Grid
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                Margin="0,35,0,0">
                                                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                                    <TextBlock
                                                        x:Name="titleInput"
                                                        Margin="0,0,0,5"
                                                        FontSize="24"
                                                        Text="{Binding Title}" />
                                                    <Image
                                                        Height="20"
                                                        Margin="25,0,0,0"
                                                        MouseDown="Delete_Click"
                                                        Source="./Assets/delete.png" />
                                                    <Image
                                                        Height="20"
                                                        Margin="10,0,0,0"
                                                        MouseDown="Edit_Click"
                                                        Source="./Assets/edit.png" />

                                                </StackPanel>
                                            </Grid>
                                            <Grid Grid.Row="1" Grid.Column="0">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock FontSize="18" Text="{DynamicResource b_Cost}" />
                                                    <TextBlock FontSize="18" Text=": " />
                                                    <TextBlock
                                                        x:Name="costInput"
                                                        FontSize="18"
                                                        Text="{Binding Cost}" />
                                                    <TextBlock FontSize="18" Text="$" />
                                                </StackPanel>
                                            </Grid>

                                            <Grid Grid.Row="2" Grid.Column="0">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock FontSize="18" Text="{DynamicResource b_Bodytype}" />
                                                    <TextBlock FontSize="18" Text=": " />
                                                    <TextBlock
                                                        x:Name="bodytypeInput"
                                                        FontSize="18"
                                                        Text="{Binding Bodytype}" />
                                                </StackPanel>
                                            </Grid>

                                            <Grid Grid.Row="3" Grid.Column="0">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock FontSize="18" Text="{DynamicResource b_Rating}" />
                                                    <TextBlock FontSize="18" Text=": " />
                                                    <TextBlock
                                                        x:Name="ratingInput"
                                                        FontSize="18"
                                                        Text="{Binding Rating}" />
                                                </StackPanel>
                                            </Grid>
                                        </Grid>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </TabItem.Content>
                </TabItem>

                <TabItem
                    Width="Auto"
                    HorizontalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Header="{DynamicResource h_Tab3}">
                    <TabItem.Content>
                        <Grid Height="Auto" Background="Transparent">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="163*" />
                                <ColumnDefinition Width="621*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.85*" />
                                <RowDefinition Height="0.15*" />
                            </Grid.RowDefinitions>

                            <WrapPanel
                                Grid.RowSpan="2"
                                Grid.ColumnSpan="2"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Vertical"
                                Style="{DynamicResource CyanBgStyle2}">

                                <TextBlock Style="{DynamicResource SettingsTxtBlck}" Text="{DynamicResource h_Exp3}" />
                                <WrapPanel
                                    Width="Auto"
                                    HorizontalAlignment="Center"
                                    Orientation="Horizontal">
                                    <Button
                                        x:Name="RusLocal"
                                        Width="130"
                                        Height="35"
                                        Margin="10,0,10,0"
                                        Padding="5"
                                        Command="local:WindowCommands.RusSelect"
                                        Content="{DynamicResource cbi_rus}"
                                        Template="{StaticResource ButtonTemplate}" />

                                    <Button
                                        x:Name="EnLocal"
                                        Width="130"
                                        Height="35"
                                        Margin="10,0,10,0"
                                        Padding="5"
                                        Command="local:WindowCommands.EngSelect"
                                        Content="{DynamicResource cbi_en}"
                                        Template="{StaticResource ButtonTemplate}" />
                                </WrapPanel>

                                <TextBlock Style="{DynamicResource SettingsTxtBlck}" Text="{DynamicResource h_Exp1}" />
                                <WrapPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                    <Button
                                        x:Name="btnGeometric"
                                        Margin="10,0,10,0"
                                        Padding="5"
                                        Click="btnGeometric_Click"
                                        Content="{DynamicResource but_geomCur}"
                                        Style="{DynamicResource SettingsBtn}"
                                        Template="{StaticResource ButtonTemplate}" />
                                    <Button
                                        x:Name="btnPixel"
                                        Width="130"
                                        Margin="10,0,10,0"
                                        Padding="5"
                                        Click="btnGeometric_Click"
                                        Content="{DynamicResource but_PixCur}"
                                        Template="{StaticResource ButtonTemplate}" />
                                </WrapPanel>
                            </WrapPanel>
                        </Grid>
                    </TabItem.Content>
                </TabItem>

            </TabControl>
        </Grid>
    </Border>
</Window>


