<Window
    x:Class="Lab45.FilterItems"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Lab45"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="FilterItems"
    Width="300"
    Height="350"
    Background="#FF90B4EF"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="0.4*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>


        <Grid Grid.Row="0" VerticalAlignment="Top">
            <StackPanel Orientation="Vertical">
                <RadioButton
                    x:Name="radiobtnCost"
                    VerticalContentAlignment="Center"
                    Content="{DynamicResource sorting_cat1}"
                    FontSize="18"
                    GroupName="FilterCategory"
                    IsChecked="True" />
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <Label
                        Width="45"
                        Height="30"
                        Content="{DynamicResource sorting_cat1_from}"
                        FontSize="16" />
                    <TextBox
                        x:Name="costFrom"
                        Width="45"
                        Height="20"
                        Margin="0,0,15,0" />

                    <Label
                        Width="30"
                        Height="30"
                        Content="{DynamicResource sorting_cat1_to}"
                        FontSize="16" />
                    <TextBox
                        x:Name="costTo"
                        Width="55"
                        Height="20" />
                </StackPanel>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" VerticalAlignment="Top">
            <StackPanel Orientation="Vertical">
                <RadioButton
                    x:Name="radiobtnBodytype"
                    VerticalContentAlignment="Center"
                    Content="{DynamicResource sorting_cat2}"
                    FontSize="18"
                    GroupName="FilterCategory" />
                <WrapPanel Orientation="Horizontal">
                    <RadioButton
                        x:Name="bodytype1"
                        Margin="0,0,5,0"
                        Content="Sedan"
                        FontSize="14"
                        IsChecked="True" />
                    <RadioButton
                        x:Name="bodytype2"
                        Margin="0,0,5,0"
                        Content="Universal"
                        FontSize="14" />
                    <RadioButton
                        x:Name="bodytype3"
                        Margin="0,0,5,0"
                        Content="Convertible"
                        FontSize="14" />
                    <RadioButton
                        x:Name="bodytype4"
                        Margin="0,0,5,0"
                        Content="Coupe"
                        FontSize="14" />
                </WrapPanel>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="2" VerticalAlignment="Top">
            <StackPanel Orientation="Vertical">
                <RadioButton
                    x:Name="radiobtnRating"
                    VerticalContentAlignment="Center"
                    Content="{DynamicResource sorting_cat3}"
                    FontSize="18"
                    GroupName="FilterCategory" />
                <WrapPanel Orientation="Horizontal">
                    <RadioButton
                        x:Name="rating1"
                        Margin="0,0,5,0"
                        Content="1"
                        FontSize="14"
                        IsChecked="True" />
                    <RadioButton
                        x:Name="rating2"
                        Margin="0,0,5,0"
                        Content="2"
                        FontSize="14" />
                    <RadioButton
                        x:Name="rating3"
                        Margin="0,0,5,0"
                        Content="3"
                        FontSize="14" />
                    <RadioButton
                        x:Name="rating4"
                        Margin="0,0,5,0"
                        Content="4"
                        FontSize="14" />
                    <RadioButton
                        x:Name="rating5"
                        Margin="0,0,5,0"
                        Content="5"
                        FontSize="14" />
                </WrapPanel>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="3" VerticalAlignment="Top">
            <StackPanel Orientation="Vertical">
                <Button Click="FilterList" Content="{DynamicResource sorting_filterBtn}" />
                <Button Click="ResetFilterList" Content="{DynamicResource sorting_resetFilterBtn}" />
            </StackPanel>

        </Grid>
    </Grid>
</Window>
