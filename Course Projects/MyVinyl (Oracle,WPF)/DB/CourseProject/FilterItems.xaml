<Window
    x:Class="CourseProject.FilterItems"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CourseProject"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="FilterItems"
    Width="350"
    Height="500"
   
    WindowStartupLocation="CenterScreen"
     Style="{DynamicResource WindowFilterStyle}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.1*"/>
            <RowDefinition Height="2.3*"/>
            <RowDefinition Height="2.3*"/>
            <RowDefinition />
            <RowDefinition Height="0.7*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>


        <Grid Grid.Row="0" VerticalAlignment="Top">
            <StackPanel Orientation="Vertical">
                <RadioButton
                    x:Name="radiobtnCost"
                    VerticalContentAlignment="Center"
                    Content="{DynamicResource sorting_cat1}"
                    FontSize="18"
                    Background="#554E92"
                    Foreground="White"
                    GroupName="FilterCategory"
                    IsChecked="True" />
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <Label
                        Width="45"
                        Margin="20,0,0,1"
                        Height="30"
                        Content="{DynamicResource sorting_cat1_from}"
                        FontSize="16"
                        Foreground="White" />
                    <TextBox
                        x:Name="costFrom"
                        Width="45"
                        Height="20"
                        Margin="0,0,15,0"
                        Background="#554E92" />

                    <Label
                        Width="30"
                        Height="30"
                        Margin="20,0,0,1"
                        Content="{DynamicResource sorting_cat1_to}"
                        FontSize="16"
                        Foreground="White" />
                    <TextBox
                        x:Name="costTo"
                        Width="55"
                        Height="20"
                        Background="#554E92" />
                </StackPanel>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" VerticalAlignment="Top">
            <StackPanel Orientation="Vertical">
                <RadioButton
                    x:Name="radiobtnId"
                     Foreground="White"
                    Background="#554E92"
                    Margin="0,0, 0 ,10"
                    VerticalContentAlignment="Center"
                    Content="By id"
                    FontSize="18"
                    GroupName="FilterCategory" />
                <WrapPanel Orientation="Vertical">
                    <RadioButton
                        x:Name="ascRadio"
                        Margin="20,0,5,1"
                        Background="#554E92"
                        Content="Asc"
                        FontSize="14"
                        Foreground="White"
                        IsChecked="True" />
                    <RadioButton
                        x:Name="descRadio"
                        Margin="20,0,5,1"
                        Background="#554E92"
                        Content="DESC"
                        FontSize="14"
                        Foreground="White" />
                    <!--<RadioButton
                        x:Name="genre3"
                        Margin="20,0,5,1"
                        Background="#554E92"
                        Content="Alternative rock"
                        FontSize="14"
                        Foreground="White" />
                    <RadioButton
                        x:Name="genre4"
                        Margin="20,0,5,1"
                        Background="#554E92"
                        Content="Hip hop"
                        FontSize="14"
                        Foreground="White" />
                    <RadioButton
                        x:Name="genre5"
                        Margin="20,0,5,1"
                        Background="#554E92"
                        Content="Comedy-rock"
                        FontSize="14"
                        Foreground="White" />
                    <RadioButton
                        x:Name="genre6"
                        Margin="20,0,5,1"
                        Background="#554E92"
                        Content="Horror-punk"
                        FontSize="14"
                        Foreground="White" />
                    <RadioButton
                        x:Name="genre7"
                        Margin="20,0,5,1"
                        Background="#554E92"
                        Content="Russian bard"
                        FontSize="14"
                        Foreground="White" />-->
                </WrapPanel>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Vertical">
            <RadioButton
                    x:Name="radiobtnGenre"
                    VerticalContentAlignment="Center"
                    Content="By genre"
                    FontSize="18"
                    Background="#554E92"
                    Foreground="White"
                    GroupName="FilterCategory"
                    IsChecked="True" />
            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                <!--<Label
                        Width="45"
                        Margin="20,0,0,1"
                        Height="30"
                        Content="{DynamicResource sorting_cat1_from}"
                        FontSize="16"
                        Foreground="White" />-->
                <TextBox
                        x:Name="genreInputFilt"
                        Width="150"
                        Height="20"
                        Margin="20,10,15,0"
                        Background="#554E92" />

               
            </StackPanel>
        </StackPanel>

        <Grid Grid.Row="3" VerticalAlignment="Top">
            <StackPanel Orientation="Vertical">
                <RadioButton
                    x:Name="radiobtnYear"
                    VerticalContentAlignment="Center"
                    Content="{DynamicResource sorting_cat3}"
                    FontSize="18"
                    Foreground="White"
                    Background="#554E92"
                    GroupName="FilterCategory" />
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <Label
                        Width="45"
                        Margin="20,0,0,1"
                        Height="30"
                        Content="{DynamicResource sorting_cat1_from}"
                        FontSize="16"
                        Foreground="White" />
                    <TextBox
                        x:Name="yearFrom"
                        Width="45"
                        Height="20"
                        Margin="0,0,15,0"
                        Background="#554E92" />

                    <Label
                        Width="30"
                        Height="30"
                        Margin="20,0,0,1"
                        Content="{DynamicResource sorting_cat1_to}"
                        FontSize="16"
                        Foreground="White" />
                    <TextBox
                        x:Name="yearTo"
                        Width="55"
                        Height="20"
                        Background="#554E92" />
                </StackPanel>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="4" VerticalAlignment="Top">
            <StackPanel Orientation="Vertical">
                <Button Click="FilterList" Content="{DynamicResource sorting_filterBtn}" />
                <Button Click="ResetFilterList" Content="{DynamicResource sorting_resetFilterBtn}" />
            </StackPanel>

        </Grid>
    </Grid>
</Window>
