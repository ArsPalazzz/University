<Window x:Class="CourseProject.EditItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseProject"
        Title="EditItem"
        Width="800"
        Height="450"
        mc:Ignorable="d"
        >
    <Window.Background>
        <ImageBrush ImageSource="./Assets/background.jpg" />
    </Window.Background>
    <Grid HorizontalAlignment="Center" Style="{DynamicResource AddBgStyle}">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="160" />
            <RowDefinition Height="0.55*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <TextBlock
            Grid.Row="0"
            Grid.ColumnSpan="3"
            HorizontalAlignment="Center"
            FontSize="28"
            FontWeight="Medium"
            Foreground="White"
             Loaded="EditItem_Loaded"
            Text="Edit item Page" />
        <!--<TextBox
            Template="{ StaticResource TextBoxTemplate}"
            x:Name="titleInput0"
            Grid.Column="2"
            Grid.Row="1" />-->
        <!--<TextBox
            Template="{ StaticResource TextBoxTemplate}"
            x:Name="titleInput"
            Grid.Column="1"
            Grid.Row="1" />-->
        <Image
            x:Name="ProductsPhotoEdit"
            Grid.Row="1"
            Grid.RowSpan="4"
            Grid.Column="0"
            Margin="0,10"
            VerticalAlignment="Top" />

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2.5*" />
            </Grid.ColumnDefinitions>

            <Label
                Grid.Column="0"
                Height="30"
                Content="Artist name"
                Foreground="White" />

            <TextBox
                x:Name="artistInputEdit"
                Grid.Row="2"
                Grid.Column="1"
                 BorderBrush="black"
            Margin="10,0"
               Height="30"
            MinWidth="240"
                Background="#4C4870"
                Foreground="White"
               />

        </Grid>
        <Grid Grid.Row="1" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2.5*" />
            </Grid.ColumnDefinitions>

            <Label
                Grid.Column="0"
                Height="30"
                Content="Album name"
                Foreground="White" />

            <TextBox
                x:Name="albumInputEdit"
                Grid.Row="2"
                Grid.Column="1"
                BorderBrush="black"
                Margin="10,0"
                Height="30"
                MinWidth="240"
                Background="#4C4870"
                Foreground="White" />

        </Grid>


        <Grid Grid.Row="2" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2.5*" />
            </Grid.ColumnDefinitions>

            <Label
                Grid.Column="0"
                Height="30"
                Content="Cost"
                Foreground="White" />
            <TextBox
                x:Name="costInputEdit"
                Grid.Row="2"
                Grid.Column="1"
                BorderBrush="black"
                Margin="10,0"
                Height="30"
                MinWidth="240"
                Background="#4C4870"
                Foreground="White"
                />
            <!--<TextBox
                x:Name="costInputAdd"
                Grid.Row="2"
                Grid.Column="1"
                Template="{StaticResource TextBoxTemplate}" />-->

        </Grid>
        <Grid
            Grid.Row="4"
            Grid.RowSpan="2"
            Grid.Column="1"
            VerticalAlignment="Top">
            <Grid.RowDefinitions>

                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2.5*" />
            </Grid.ColumnDefinitions>

            <Label
                Grid.Column="0"
                Height="30"
                Content="Description"
                Foreground="White" />

            <TextBox
                x:Name="descriptionInputEdit"
                Grid.Row="0"
                Grid.Column="1"
                 BorderBrush="black"
                Margin="10,0"
                Height="30"
                MinWidth="240"
                Background="#4C4870"
                Foreground="White" />

        </Grid>
        <Grid Grid.Row="3" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2.5*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Label
                Grid.Column="0"
                Height="30"
                Content="Pirture"
                Foreground="White" />

            <Button
                x:Name="selectPhotoEdit"
                Grid.Row="0"
                Grid.Column="1"
                Height="30"
                Margin="10,0"
                Click="OpenExplorer"
                Content="Choose a picture"
                Style="{DynamicResource importImageStyle}" />
        </Grid>
        <Grid Grid.Row="2" Grid.Column="2">
            <Grid.RowDefinitions>

                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2.5*" />
            </Grid.ColumnDefinitions>

            <Label
                Grid.Column="0"
                Height="30"
                Content="Year"
                Foreground="White" />

            <TextBox
                x:Name="yearInputEdit"
                Grid.Row="0"
                Grid.Column="1"
                BorderBrush="black"
                Margin="10,0"
                Height="30"
                MinWidth="240"
                Background="#4C4870"
                Foreground="White" />

        </Grid>
        <Grid Grid.Row="3" Grid.Column="2">
            <Grid.RowDefinitions>

                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2.5*" />
            </Grid.ColumnDefinitions>



            <Label
                   
                    Height="30"
                    VerticalAlignment="Top"
                    Content="Amount"
                    Foreground="White" />

            <TextBox
                    x:Name="amountInputEdit"
                   Grid.Column="1"
                    VerticalAlignment="Top"
                     BorderBrush="black"
                Margin="10,0"
                Height="30"
                MinWidth="240"
                Background="#4C4870"
                Foreground="White" />

        </Grid>
        <Grid Grid.Row="4" Grid.Column="2">
            <Grid.RowDefinitions>

                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2.5*" />
            </Grid.ColumnDefinitions>

            <Label
                Grid.Column="0"
                Height="30"
                Content="Status"
                Foreground="White" />

            <ComboBox
                x:Name="comboboxInputEdit"
                Grid.Row="10"
                Grid.Column="1"
                Height="30"
                Margin="10,0"
                FontSize="14"
                SelectedIndex="0">
                <ComboBoxItem Content="M (Mint)" />
                <ComboBoxItem Content="EX (Excellent)" />
                <ComboBoxItem Content="VG (Very Good)" />
                <ComboBoxItem Content="G (Good)" />
                <ComboBoxItem Content="F (Fair)" />
                <ComboBoxItem Content="B (Bad)" />
            </ComboBox>

        </Grid>
        <Grid Grid.Row="5" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />

            </Grid.ColumnDefinitions>

            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.3*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <Label
                Grid.Column="0"
                Height="30"
                Content="Songs(side a) (use ;)"
                Foreground="White" />

                <TextBox
                x:Name="songsAInputEdit"
    
                Grid.Column="1"
               BorderBrush="black"
                Margin="10,0"
                Height="30"
                MinWidth="240"
                Background="#4C4870"
                Foreground="White" />

                <Label
                    Grid.Column="0"
                    Grid.Row="1"
                    Height="30"
                    VerticalAlignment="Top"
                    Content="Songs(side b) (use ;)"
                    Foreground="White" />

                <TextBox
                    x:Name="songsBInputEdit"
                    Grid.Row="1"
                    Grid.Column="1"
                    VerticalAlignment="Top"
                     BorderBrush="black"
                Margin="10,0"
                Height="30"
                MinWidth="240"
                Background="#4C4870"
                Foreground="White" />
            </Grid>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>

                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Label
                    Grid.Row="0"
                    Height="30"
                    VerticalAlignment="Top"
                    Content="Genres(use ;)"
                    Foreground="White" />

                <TextBox
                    x:Name="genresInputEdit"
                    Grid.Row="1"
                    VerticalAlignment="Top"
                    BorderBrush="black"
                Margin="10,0"
                Height="30"
                MinWidth="240"
                Background="#4C4870"
                Foreground="White" />
            </Grid>


        </Grid>
        <Grid
            Grid.Row="5"
            Grid.Column="1"
            VerticalAlignment="Top">
            <Grid.RowDefinitions>

                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.6*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <Label
                Grid.Column="0"
                Height="60"
                VerticalAlignment="Top"
                Content="Delivery to warehouse"
                Foreground="White" />

            <Calendar
                x:Name="calendarEdit"
                Grid.RowSpan="5"
                Grid.Column="1"
                Width="200"
                Height="200"
                HorizontalAlignment="Center"
                DisplayDateStart="05.08.2023"
                DisplayDateEnd="11.08.2023"
                FirstDayOfWeek="Monday"
                SelectedDatesChanged="calendar_SelectedDatesChanged">

                <Calendar.LayoutTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="0.8" ScaleY="0.9" />
                        <SkewTransform />
                        <RotateTransform />
                        <TranslateTransform />
                    </TransformGroup>
                </Calendar.LayoutTransform>

            </Calendar>

        </Grid>

        <Button
            Grid.Row="6"
            Grid.ColumnSpan="3"
            Click="SubmitEditPage_Click"
            Content="Submit" />


