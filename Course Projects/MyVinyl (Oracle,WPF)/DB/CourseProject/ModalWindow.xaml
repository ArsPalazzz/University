<Window x:Class="CourseProject.ModalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseProject"
        mc:Ignorable="d"
        Title="ModalWindow" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid Margin="10" Width="360" Height="160">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
               
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"  Margin="0 20 0 0">Are you absolutely sure?</TextBlock>
           

            <WrapPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,50,0,0">
                <Button FontSize="14" FontWeight="SemiBold" IsDefault="True" Click="Accept_Click" MinWidth="120" MinHeight="40" Margin="0,0,30,0" Background="Red" Foreground="White">Sure</Button>
                <Button FontSize="14" FontWeight="SemiBold" IsCancel="True" Background="Transparent" MinWidth="120" MinHeight="40">Cancel</Button>
            </WrapPanel>

        </Grid>
    </Grid>
</Window>
