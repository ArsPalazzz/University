<UserControl
    x:Class="CourseWork.Views.AdminViews.UsersAdminView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CourseWork.Views.AdminViews"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="#0f3868"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid
            Grid.Row="0"
            Grid.Column="0"
            Margin="0,0,0,7.4">
            <materialDesign:Card
                Margin="10"
                materialDesign:ShadowAssist.ShadowDepth="Depth4"
                UniformCornerRadius="5">
                <DataGrid
                    x:Name="usersGrid"
                    VerticalAlignment="Top"
                    CanUserSortColumns="False"
                    ItemsSource="{Binding Users}"
                    SelectedItem="{Binding SelectedUser, Mode=TwoWay}">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Width="auto" Header="Delete">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Command="{Binding RelativeSource={RelativeSource AncestorType=DataGrid}, Path=DataContext.DeleteCommand}" Tag="{Binding}">
                                        <materialDesign:PackIcon Kind="Delete" />
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

            </materialDesign:Card>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="0">
            <materialDesign:Card
                Margin="10"
                materialDesign:ShadowAssist.ShadowDepth="Depth4"
                UniformCornerRadius="5">
                <StackPanel Orientation="Horizontal">
                    <Button
                        Width="130"
                        Height="40"
                        Margin="0,0,10,0"
                        Command="{Binding SaveCommand}"
                        Content="{DynamicResource Save}"
                        Style="{StaticResource RoundedButtonStyle}" />
                    <!--<Button Click="FilterUsers_Click" Content="{DynamicResource Filters}" Style="{StaticResource RoundedButtonStyle}" Height="40" Width="70"/>-->
                    <TextBlock>Name starts with: </TextBlock>
                    <TextBox Width="160" TextChanged="FindLogin_Change"></TextBox>
                    
                    <!--<Button
                        Width="130"
                        Height="40"
                        Margin="0,0,10,0"
                        Command="{Binding FilterUsersCommand}"
                        Content="{DynamicResource Filters}"
                        Style="{StaticResource RoundedButtonStyle}" />-->
                    <!--<Button Command="{Binding AddCommand}" Content="{DynamicResource Save}" Style="{StaticResource RoundedButtonStyle}" Height="40" Width="70"/>-->
                    <!--<TextBox Width="90"></TextBox>
                    <TextBox Width="90"></TextBox>
                    <TextBox Width="90"></TextBox>-->
                </StackPanel>
            </materialDesign:Card>
        </Grid>
    </Grid>
</UserControl>
